<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <%= f.fields_for :user_profile, @profile do |f| %>
    <div class="field">
      <%= f.label :family_name %><br />
      <%= f.text_field :family_name, autofocus: true, autocomplete: "family-name" %>
    </div>

    <div class="field">
      <%= f.label :family_name_kana %><br />
      <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family-name" %>
    </div>

    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name" %>
    </div>

    <div class="field">
      <%= f.label :first_name_kana %><br />
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "given-name" %>
    </div>

    <div class="field">
      <%= f.label :birthday %><br />
      <%= f.date_select :birthday, use_month_numbers: true, start_year: 1940, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1), autofocus: true %>
    </div>
  <% end %>

  <%= f.fields_for :delivery_addresses, @delivery_address do |f| %>
    <div class="field">
      <%= f.label :family_name %><br />
      <%= f.text_field :family_name, autofocus: true, autocomplete: "family-name" %>
    </div>

    <div class="field">
      <%= f.label :family_name_kana %><br />
      <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family-name" %>
    </div>

    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name" %>
    </div>

    <div class="field">
      <%= f.label :first_name_kana %><br />
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "given-name" %>
    </div>

    <div class="field">
      <%= f.label :postal_code %><br />
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code" %>
    </div>

    <div class="field">
      <%= f.label :prefecture_id %><br />
      <%= f.text_field :prefecture_id, autofocus: true, autocomplete: "address-level1" %>
    </div>

    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city, autofocus: true, autocomplete: "address-level2" %>
    </div>

    <div class="field">
      <%= f.label :address %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address-level3" %>
    </div>

    <div class="field">
      <%= f.label :building %><br />
      <%= f.text_field :building, autofocus: true, autocomplete: "address-level4" %>
    </div>

    <div class="field">
      <%= f.label :phone_number %><br />
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "tel" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
