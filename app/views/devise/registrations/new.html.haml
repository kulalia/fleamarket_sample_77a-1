%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label :nickname
    %br/
    = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
  = f.fields_for :user_profile, @profile do |f|
    .field
      = f.label :family_name
      %br/
      = f.text_field :family_name, autofocus: true, autocomplete: "family-name"
    .field
      = f.label :family_name_kana
      %br/
      = f.text_field :family_name_kana, autofocus: true, autocomplete: "family-name"
    .field
      = f.label :first_name
      %br/
      = f.text_field :first_name, autofocus: true, autocomplete: "given-name"
    .field
      = f.label :first_name_kana
      %br/
      = f.text_field :first_name_kana, autofocus: true, autocomplete: "given-name"
    .field
      = f.label :birthday
      %br/
      = f.date_select :birthday, use_month_numbers: true, start_year: 1940, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1), autofocus: true
  = f.fields_for :delivery_addresses, @delivery_address do |f|
    .field
      = f.label :family_name
      %br/
      = f.text_field :family_name, autofocus: true, autocomplete: "family-name"
    .field
      = f.label :family_name_kana
      %br/
      = f.text_field :family_name_kana, autofocus: true, autocomplete: "family-name"
    .field
      = f.label :first_name
      %br/
      = f.text_field :first_name, autofocus: true, autocomplete: "given-name"
    .field
      = f.label :first_name_kana
      %br/
      = f.text_field :first_name_kana, autofocus: true, autocomplete: "given-name"
    .field
      = f.label :postal_code
      %br/
      = f.text_field :postal_code, autofocus: true, autocomplete: "postal-code"
    .field
      = f.label :prefecture_id
      %br/
      = f.collection_select :prefecture_id, Prefecture.all, :id, :name, autofocus: true, autocomplete: "address-level1"
    .field
      = f.label :city
      %br/
      = f.text_field :city, autofocus: true, autocomplete: "address-level2"
    .field
      = f.label :address
      %br/
      = f.text_field :address, autofocus: true, autocomplete: "address-level3"
    .field
      = f.label :building
      %br/
      = f.text_field :building, autofocus: true, autocomplete: "address-level4"
    .field
      = f.label :phone_number
      %br/
      = f.text_field :phone_number, autofocus: true, autocomplete: "tel"
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
