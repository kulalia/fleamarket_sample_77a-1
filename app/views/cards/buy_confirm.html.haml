.buy-confirm__header
  = link_to image_tag("logo/logo.png", alt: "FURIMA", size: "185x49"), root_path
.buy-confirm-contents
  %h2.buy-confirm-content__title
    購入内容の確認
  .buy-confirm-content__image
    = image_tag @image.url.url, alt: "image", size: "150x150"
    .buy-confirm-content__image--text
      %p.buy-confirm-text__title
        = "#{@item.name}"
      %p.buy-confirm-text__price
        = "送料込み(税込) : #{@item.price}"
  .buy-confirm-content__price
    = "支払い金額 : #{@item.price}"
  .buy-confirm-content__submit
    %p.buy-confirm-content__submit--title
      本当に購入しますか？
    %button.buy-confirm-content__submit--btn
      = link_to purchase_card_path(@item) do
        = "購入する"
.buy-confirm-footer
