= render "layouts/header"
.back
  .show-main
    .items__name
      = "#{@item.name}"
      .items__photo_main
        = image_tag @item.item_images.first.url.url, size: "400x400"
      .itmes__photo__sub
        - @item.item_images.each do |image|
          .itmes__photo__sub__img
            = image_tag image.url.url, size: "200x200"
    .items__price
      = "#{@item.price}円"
    .items__price__sub
      (税込)送料込み
    .information
      = "#{@item.detail}"

    %table{class: 'tbl'}
      %tr
        %th{class: 'tbl__left'}
          出品者
        %td{class: 'tbl__right'}
          = "#{@item.user.nickname}"
      %tr
        %th{class: 'tbl__left'}
          カテゴリー
        %td{class: 'tbl__right'}
          = link_to "#{@item.category.name}", '#', class:'tbl__link'
          %br/
          = link_to 'ベビー服(男の子用) ~95cm', '#', class:'tbl__link'
          %br/
          = link_to 'アウター', '#', class:'tbl__link'
      %tr
        %th{class: 'tbl__left'}
          ブランド
        %td{class: 'tbl__right'}
          = "#{@item.brand}"
      %tr
        %th{class: 'tbl__left'}
          商品の状態
        %td{class: 'tbl__right'}
          = "#{@item.item_status}"
      %tr
        %th{class: 'tbl__left'}
          送料
        %td{class: 'tbl__right'}
          送料込（出品者負担）
      %tr
        %th{class: 'tbl__left'}
          発送元の地域
        %td{class: 'tbl__right'}
          = "#{@item.prefecture.name}"
      %tr
        %th{class: 'tbl__left'}
          発送日の目安
        %td{class: 'tbl__right'}
          1-2日で発送

    .option
      %ul= link_to '★ お気に入り 0', '#', class:'favorite'
      %ul
        = link_to '#', class:'bad' do
          = icon('fas', 'flag')
          不適切な商品の通報

  .cmt
    = form_for('#') do |f|
      %textarea{required:'required', name:'comment', class:'cmt__form'}
      .comment__msg
        相手のことを考え丁寧なコメントを心がけましょう。
        %br/
        不快な言葉遣いなどは利用制限や退会処分となることがあります。
      %button{type: "submit", class:'cmt__send'}
        %i.fas.fa-comment
        コメントする
    .show__btn
      - if @item.purchaser_id.present?
        = '売り切れです'
      - else
        - if @item.user_id == current_user.id
          -# = link_to edit_item_path, class:'show__btn__link' do
          -#   = '商品情報編集'
          = link_to '商品情報編集', '#', class:'show__btn__link'
          = link_to '商品情報削除', '#', class:'show__btn__link'

        - else
          = link_to buy_confirm_card_path, class:'show__btn__link' do
            = '購入画面へ'
  .page
    %ul=link_to '< 前の商品', '#', class:'page__prev'
    %ul=link_to '後ろの商品 >', '#', class:'page__next'

  .more
    %ul=link_to 'ベビー・キッズをもっと見る', '#', class:'more__list'
    .more__img
      画像
= render "layouts/footer"
