.header
  %p 商品出品ページ
.main
  .parent-box
    .first-box
      .image-box
        .image-box__sample
          %p 出品画像
        .image-box__mandatory
          %p 必須
      .advice-box
        %p 商品画像をアップロードできます
        
      -# 画像添付部分
      .image-box__main
        %input.image-box{:type => 'file'}/
        %label クリックして画像をアップロード
               
    .second-box 
      .item-name
        .item-name__sample
          %p 商品名
        .item-name__mandatory
          %p 必須
      .item-title
        %input.item-input-title{:placeholder => '40字まで', :type => 'text'}/
      .item-explanation
        .item-explanation__sample
          %p 商品の説明
        .item-explanation__mandatory
          %p 必須
      .explanation-text
        %textarea
          :preserve

    .third-box
      .third-box__title
        %p 商品の詳細
      .item-category
        .item-category__sample
          %p カテゴリー
        .item-category__mandatory
          %p 必須
      .item-category__select
        %select{:name => 'category'}
          %option{:value => '0'} レディース
          %option{:value => '1'} メンズ
          %option{:value => '2'} キッズ
          %option{:value => '3'} インテリア
          %option{:value => '4'} ホビー
          %option{:value => '5'} 美容
          %option{:value => '6'} 家電
          %option{:value => '7'} スポーツ
          %option{:value => '8'} その他
      .item-brand
        .item-brand__sample
          %p ブランド
        .item-brand__optional
          %p 任意
      .brand-title
        %input.brand-input-title{:name => 'name', :placeholder => '(例)シャネル', :type => 'text', :value => ''}/
      .item-status
        .item-status__sample
          %p 商品の状態
        .item-status__mandatory
          %p 必須
      .item-status__select
        %select{:name => 'status'}
          %option{:value => '0'} 新品・未使用
          %option{:value => '1'} 未使用に近い
          %option{:value => '2'} 目立った傷や汚れなし
          %option{:value => '3'} やや傷や汚れあり
          %option{:value => '4'} 傷や汚れあり
          %option{:value => '5'} 全体的に状態が悪い

    .fourth-box
      .fourth-box__title
        %p 配送について
      .shipping-fee
        .shipping-fee__sample
          %p 配送料の負担
        .shipping-fee__mandatory
          %p 必須
      .shipping-fee__select
        %select{:name => 'shipping'}
          %option{:value => '0'} 送料込み(出品者負担)
          %option{:value => '1'} 着払い（購入者負担)
      .shipping-region
        .shipping-region__sample
          %p 発送元の地域
        .shipping-region__mandatory
          %p 必須
      .shipping-region__text
        %select{:name => 'prefecture'}
          %option{ value: "1"} 北海道
          %option{ value: "2"} 青森県
          %option{ value: "3"} 岩手県
          %option{ value: "4"} 宮城県
          %option{ value: "5"} 秋田県
          %option{ value: "6"} 山形県
          %option{ value: "7"} 福島県
          %option{ value: "8"} 茨城県
          %option{ value: "9"} 栃木県
          %option{ value: "10"} 群馬県
          %option{ value: "11"} 埼玉県
          %option{ value: "12"} 千葉県
          %option{ value: "13"} 東京都
          %option{ value: "14"} 神奈川県
          %option{ value: "15"} 新潟県
          %option{ value: "16"} 富山県
          %option{ value: "17"} 石川県
          %option{ value: "18"} 福井県
          %option{ value: "19"} 山梨県
          %option{ value: "20"} 長野県
          %option{ value: "21"} 岐阜県
          %option{ value: "22"} 静岡県
          %option{ value: "23"} 愛知県
          %option{ value: "24"} 三重県
          %option{ value: "25"} 滋賀県
          %option{ value: "26"} 京都府
          %option{ value: "27"} 大阪府
          %option{ value: "28"} 兵庫県
          %option{ value: "29"} 奈良県
          %option{ value: "30"} 和歌山県
          %option{ value: "31"} 鳥取県
          %option{ value: "32"} 島根県
          %option{ value: "33"} 岡山県
          %option{ value: "34"} 広島県
          %option{ value: "35"} 山口県
          %option{ value: "36"} 徳島県
          %option{ value: "37"} 香川県
          %option{ value: "38"} 愛媛県
          %option{ value: "39"} 高知県
          %option{ value: "40"} 福岡県
          %option{ value: "41"} 佐賀県
          %option{ value: "42"} 長崎県
          %option{ value: "43"} 熊本県
          %option{ value: "44"} 大分県
          %option{ value: "45"} 宮崎県
          %option{ value: "46"} 鹿児島県
          %option{ value: "47"} 沖縄県
      .until-shipping
        .until-shipping__sample
          %p 発送までの日数
        .until-shipping__mandatory
          %p 必須
      .until-shipping__select
        %select{:name => 'due'}
          %option{:value => '0'} 1~2日で発送
          %option{:value => '1'} 2~3日で発送
          %option{:value => '2'} 4~7日で発送

    .fifth-box
      .standard-price
        %p 価格(¥300 ~ ¥9,999,999)
      .price-box
        .price-box__sample
          .price-box__sample-other
            %p 販売価格
          .price-box__mandatory
            %p 必須
        .price-box__text
          %input.item-input-price{:name => '#', :placeholder => '¥300', :type => 'text', :value => ''}/

    .btn-box
      = button_tag '出品する', type: 'submit', class: 'item-sell__btn'
      = button_tag 'トップページに戻る', type: 'submit', class: 'redirect-form__btn'
.footer
