        %p.reasonList__explanation
      %li.reasonList
        .reasonList__image
        %h3.reasonList__subtitle
        %p.reasonList__explanation
      %li.reasonList
        .reasonList__image
        %h3.reasonList__subtitle
        %p.reasonList__explanation
  %section.main__mainBanner
