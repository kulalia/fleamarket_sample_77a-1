.header
  .header__body
    .header__body--top
      %h1.header__body--top--icons
        %a.header__body--top--icons--icon(href="/")
          = image_tag 'logo/logo.png', class: 'header__body--top--icons--icon--logo'
      .form    
        = form_with url: root_path do |f|
          = f.text_field :content, class: 'form__input', placeholder: 'キーワードから探す'
          = f.submit class: 'form__submitBtn'
          
      %ul.result      
    .header__body--nav
      %ul.navLeft
        %li.category
          = link_to "#", class: "li" do
            カテゴリー
          .category__tree
            %ul.category__tree--list
              %li.category__tree--list--item
                %select
                  %option(value="1")
                    レディース
        %li.brand
          = link_to "#", class: "li"  do
            ブランド
          -# .brand__tree
          -#   %ul.brand__list
          -#     %li.brand__list--item
      %ul.navRight
        %li.login
          = link_to "#", class: "li" do
            ログイン
        %li.register
          = link_to "#", class: "li" do
            新規会員登録


