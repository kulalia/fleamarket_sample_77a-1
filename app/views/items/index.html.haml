.header
  .header__body
    .header__body--top
      %a(href="")
      = image_tag 'logo/logo.png', height: 40, width: 140, class: 'header__body--top--logo'
      .form    
        = form_with url: root_path do |f|
          = f.text_field :content, class: 'form__input', placeholder: 'キーワードから探す'
          = f.label :submit, class: 'form__submit' do
            = f.submit  class: 'form__submit--btn'
            = image_tag 'icon/icon-search 1.png', height: 37, width: 36, class: 'form__icon'
      %ul.result      
    .header__body--nav
      %ul.navLeft
        %li.category
          = link_to "#" do
            カテゴリー
          -# .category__tree
          -#   %ul.category__list
          -#     %li.category__list--item
        %li.brand
          = link_to "#" do
            ブランド
          -# .brand__tree
          -#   %ul.brand__list
          -#     %li.brand__list--item
      %ul.navRight
        %li.login
          = link_to "#" do
            ログイン
        %li.register
          = link_to "#" do
            新規会員登録
.main
