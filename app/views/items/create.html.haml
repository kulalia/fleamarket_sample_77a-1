.first-box
  .image-box
    %p 出品画像(必須)
  .advice-box
    %p 最大10枚までアップロードできます
  .image-box__main

.second-box 
  .item-name
    %p 商品名(必須)
  .item-title
    %input.item-input-title{:name => '#', :placeholder => '40字まで', :type => 'text', :value => ''}/
  .item-explanation
    %p 商品の説明(必須)
  .explanation-text
    // textarea

.third-box
  .third-box__title
    %p 商品の詳細(必須)
  .item-category
    %p カテゴリー(必須)
  .item-category__select
    = select_tag 'item[category]', options_for_select(['レディース', 'メンズ', 'キッズ', 'インテリア', 'ホビー', '美容', '家電', 'スポーツ', 'その他'])
  .item-brand
    %p ブランド(任意)
  .brand-title
    %input.brand-input-title{:name => 'name', :placeholder => '(例)シャネル', :type => 'text', :value => ''}/
  .item-status
    %p 商品の状態(必須)
  .item-status__select
    = select_tag 'item[status]', options_for_select(['新品・未使用', '未使用に近い', '目立った傷や汚れなし', 'やや傷や汚れあり', '傷や汚れあり', '全体的に状態が悪い'])

.fourth-box
  .fourth-box__title
    %p 配送について
  .shipping-fee
    %p 配送料の負担(必須)
  .shipping-fee__select
    = select_tag '#', options_for_select(['送料込み(出品者負担)', '着払い（購入者負担)'])
  .shipping-region
    %p 発送元の地域(必須)
  .shipping-region__text
    %input.shipping-input-region{:name => '#', :placeholder => '都道府県名を入力してください', :type => 'text', :value => ''}/
  .until-shipping
    %p 発送までの日数(必須)
  .until-shipping__select
    = select_tag '#', options_for_select(['1~2日で発送', '2~3日で発送', '4~7日で発送'])

.fifth-box
  .standard-price
    %p 価格(¥300 ~ ¥9,999,999)
  .price-box
    .price-box__sample
      %p 販売価格(必須)
    .price-box__text
      %input.item-input-price{:name => '#', :placeholder => '都道府県名を入力してください', :type => 'text', :value => ''}/

.btn-box
  = button_tag '出品する', type: 'submit', class: 'item-sell__btn'
  = button_tag 'トップページに戻る', type: 'submit', class: 'redirect-form__btn'

